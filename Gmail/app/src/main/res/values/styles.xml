<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    

    <!-- Text Related-->
    <style name="bigHeadingTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/bigHeadingTextSize</item>
    </style>

    <style name="headingTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/headingTextSize</item>
    </style>

    <style name="subHeadingTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/subheadingTextSize</item>
    </style>



    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>




    <!-- Fab Style-->
    <style name="FabStyle" parent="Theme.AppCompat">
        <item name="colorAccent">@android:color/white</item>
    </style>

</resources>
